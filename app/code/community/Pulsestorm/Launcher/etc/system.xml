<config>
	<sections>
		<pulsestorm_launcher translate="label" module="pulsestorm_launcher">
            <label>Pulsestorm Launcher</label>
            <tab>advanced</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1010</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>	
            <groups>
				<options>
                    <label>Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>				
                    <fields>
						<shortcut_code_first>
                            <label>Keyboard Shortcut First</label>
                            <comment>The keycode of the first keyboard shortcut (defaults to "ctrl"/"17")</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                    		
						</shortcut_code_first>				
						
						<shortcut_code_second>
                            <label>Keyboard Shortcut Second</label>
                            <comment>The keycode of the first keyboard shortcut (defaults to "m"/"77")</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                    		
						</shortcut_code_second>

                        <global_search_enabled>
                            <label>Enable Global Search</label>
                            <comment>
                                In addition to searching the config, it will perform a global search as
                                well, which includes customers, products, orders, and more.  This can
                                take several additional seconds to perform, so if you're only looking
                                for the config search, you may want to turn this off to speed it up.
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </global_search_enabled>

                    </fields>
				</options>				
			</groups>
		</pulsestorm_launcher>    
	</sections>
</config>

